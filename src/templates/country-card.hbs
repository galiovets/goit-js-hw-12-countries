{{#each this}}
<div class="country__card">
    <h2 class="country__name">{{name}}</h2>
    <div class="country__container">
        <div class="country-info__container">
            <ul class="country-info__list">
                <li class="country-info__item">
                    <p class="country-info__descr">Capital: {{capital}}</p>
                </li>
                <li class="country-info__item">
                    <p class="country-info__descr">Population: {{population}}</p>
                </li>
                <li class="country-info__item">
                    <p class="country-info__descr">Languages:</p>
                    <ul class="country-lang__list">
                        {{#each languages}}
                        <li class="country-lang__item">
                            <p class="country-lang__text">{{this.name}}</p>
                        </li>
                        {{/each}}
                    </ul>
                </li>
            </ul>
        </div>
        <div class="country-flag__container">
            <img class="country-flag__image" src="{{flag}}" alt="{{name}} flag">
        </div>
    </div>
</div>
{{/each}}